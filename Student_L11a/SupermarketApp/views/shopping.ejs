<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
    
    <div class="container">
      <div>
        Welcome, <%= user.username %> (<%= user.role %>)

      </div>
        <br>
        <div class="text-center"><h2>Products from Supermarket</h2></div>
        <br>
        <table class="table table-hover small text-center">
          <thead>
              <tr>
                <th width="100">Product Name</th>
                <th width="100">Product Image</th>
                <th width="50">Quantity</th>
                <th width="50">Price</th>
                <th width="50">Quantity</th>
                <th width="50">Buy</th>
              </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < products.length; i++) { %>
              <tr>
                <td><a href="/products/<%= products[i].productId %>"><%= products[i].productName %></a></td>
                <td><img src="/images/<%= products[i].image %>" width="20%"></td>
                <td><%= products[i].quantity %></td>
                <td>$<%= products[i].price.toFixed(2) %></td>
                <td>
                  <select class="form-select">
                    <% for (let j = 1; j <= 5; j++) { %>
                      <option value="<%= j %>"><%= j %></option>
                    <% } %>
                  </select>
                </td>
                <td>
                  <button class="btn btn-primary">Buy</button>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
    </div>
</body>
</html>
